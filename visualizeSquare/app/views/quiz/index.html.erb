

<% @square = @squares.shuffle.first %>
<h1><%= @square.coord %></h1>

<% @white = squareAnswerWhite(@square) %>
<% @black = squareAnswerBlack(@square) %>

<%= button_to "Light Square", quiz_path(1), :method => "get", params: {a_field: @white, s_field: @square.coord, col_field: @square.color, img_field: @square.image} %>
<%= button_to "Dark Square", quiz_path(1), :method => "get", params: {a_field: @black, s_field: @square.coord, col_field: @square.color, img_field: @square.image} %>




